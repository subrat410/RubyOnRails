<h1>
  Index
</h1>
<h2>
  <%= link_to 'Create new Article', new_article_path %>
</h2>
<table>
  <tr>
   <th>Title</th>
   <th>Description</th>
  </tr>
  <% @articles.each do |x| %>
  <tr>
    <td> <%= x.title %> </td>
    <td> <%= x.description %> </td>
    <td> <%= link_to 'Edit', edit_article_path(x) %> </td>
    <td> <%= link_to 'Show', article_path(x) %></td>
    <td> <%= link_to 'Delete', article_path(x), method: :delete, data: {confirm: "Are you sure?"} %></td>
  <% end %>
  </tr>
</table>