<% if obj.errors.any? %>
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title"><%= pluralize(obj.errors.count, "error") %> have been encountered: </h3>
  </div>
  <div class="panel-body">
    <ul>
     <% obj.errors.full_messages.each do |msg| %>
     <li> <%= msg %> </li>
     <% end %>
    </ul>
  </div>
</div>
<% end %>
